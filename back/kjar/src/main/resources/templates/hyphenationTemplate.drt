template header
windowSize

template "CEP ruleset for window size @{windowSize}"


rule "SymbolEvent - critical section"
salience 1
when
    $t : com.ftn.sbnz.model.models.Text(criticalWord != "")
    $s : com.ftn.sbnz.model.events.TextEvent(processed == false) from window Recent
    eval($s instanceof com.ftn.sbnz.model.events.SymbolEvent)
then
    $s.setProcessed(true);
    update($s);
    System.out.println("SymbolEvent in critical section -> " + $s);
    java.util.List<com.ftn.sbnz.model.models.Letter> letters = $t.addToCriticalSection(((com.ftn.sbnz.model.events.SymbolEvent) $s).getSymbol());
    for(com.ftn.sbnz.model.models.Letter letter : letters) {
        insert(letter);
    }
end

rule "SymbolEvent - all symbols/spaces"
salience 1
when
    $t : com.ftn.sbnz.model.models.Text(criticalWord == "")
    $s : com.ftn.sbnz.model.events.TextEvent(processed == false) from window Recent
    eval($s instanceof com.ftn.sbnz.model.events.SymbolEvent)

    $recent : java.util.List() from collect(
        com.ftn.sbnz.model.events.TextEvent() from window TextEvents
    )

    $symbolCount : Number() from accumulate(
        com.ftn.sbnz.model.events.SymbolEvent() from $recent,
        count()
    )

    $spaceCount : Number() from accumulate(
        com.ftn.sbnz.model.events.SpaceEvent() from $recent,
        count()
    )

    eval( $symbolCount.intValue() + $spaceCount.intValue() == @{windowSize} )
then
    $s.setProcessed(true);
    update($s);
    System.out.println("SymbolEvent all symbols/spaces -> " + $s);
    java.util.List<com.ftn.sbnz.model.models.Letter> letters = $t.enterCriticalSection(((com.ftn.sbnz.model.events.SymbolEvent) $s).getSymbol());
    for(com.ftn.sbnz.model.models.Letter letter : letters) {
        insert(letter);
    }
    update($t);
    insert(new Integer($t.getCriticalWord().length() - 2));
end

rule "SymbolEvent - after last linebreak"
salience 1
when
    $t : com.ftn.sbnz.model.models.Text(criticalWord == "")
    $s : com.ftn.sbnz.model.events.TextEvent(processed == false) from window Recent
    eval($s instanceof com.ftn.sbnz.model.events.SymbolEvent)

    $recent : java.util.List() from collect(
        com.ftn.sbnz.model.events.TextEvent() from window TextEvents
    )
    
    $linebreaks : java.util.List() from collect(
        com.ftn.sbnz.model.events.LineBreakEvent() from $recent
    )

    $lb : com.ftn.sbnz.model.events.LineBreakEvent($offset : offset) from $linebreaks
    not com.ftn.sbnz.model.events.LineBreakEvent(this after $lb) from $linebreaks

    $symbolCount : Number() from accumulate(
            com.ftn.sbnz.model.events.SymbolEvent(this after $lb) from $recent,
            count()
        )
    $spaceCount : Number() from accumulate(
            com.ftn.sbnz.model.events.SpaceEvent(this after $lb) from $recent,
            count()
        )
    eval( $symbolCount.intValue() + $spaceCount.intValue() + $offset == @{windowSize} )
then
    $s.setProcessed(true);
    update($s);
    System.out.println("SymbolEvent after last line break -> " + $s);
    java.util.List<com.ftn.sbnz.model.models.Letter> letters = $t.enterCriticalSection(((com.ftn.sbnz.model.events.SymbolEvent) $s).getSymbol());
    update($t);
    for(com.ftn.sbnz.model.models.Letter letter : letters) {
        insert(letter);
    }
    insert(new Integer($t.getCriticalWord().length() - 2));
end

rule "SymbolEvent - else"
salience 0
when
    $t : com.ftn.sbnz.model.models.Text(criticalWord == "")
    $s : com.ftn.sbnz.model.events.TextEvent(processed == false) from window Recent
    eval($s instanceof com.ftn.sbnz.model.events.SymbolEvent)
then
    $s.setProcessed(true);
    update($s);
    System.out.println("SymbolEvent else case -> " + $s);
    $t.addSymbol(((com.ftn.sbnz.model.events.SymbolEvent) $s).getSymbol());
    update($t);
    $t.print();
end


rule "SpaceEvent - critical section"
when
    $t : com.ftn.sbnz.model.models.Text(criticalWord != "")
    $s : com.ftn.sbnz.model.events.TextEvent(processed == false) from window Recent
    eval($s instanceof com.ftn.sbnz.model.events.SpaceEvent)
then
    $s.setProcessed(true);
    update($s);
    System.out.println("SpaceEvent in critical section");
    int offset = $t.hyphenizePermanently(@{windowSize} - 1);
    update($t);
    insert(new com.ftn.sbnz.model.events.LineBreakEvent(offset + 1));
    $t.print();
end

rule "SpaceEvent - all symbols/spaces"
salience 1
when
    $t : com.ftn.sbnz.model.models.Text(criticalWord == "")
    $s : com.ftn.sbnz.model.events.TextEvent(processed == false) from window Recent
    eval($s instanceof com.ftn.sbnz.model.events.SpaceEvent)

    $recent : java.util.List() from collect(
        com.ftn.sbnz.model.events.TextEvent() from window TextEvents
    )

    $symbolCount : Number() from accumulate(
        com.ftn.sbnz.model.events.SymbolEvent() from $recent,
        count()
    )

    $spaceCount : Number() from accumulate(
        com.ftn.sbnz.model.events.SpaceEvent() from $recent,
        count()
    )

    eval( $symbolCount.intValue() + $spaceCount.intValue() == @{windowSize} )
then
    $s.setProcessed(true);
    update($s);
    System.out.println("SpaceEvent all symbols/spaces");
    $t.addLineBreak();
    update($t);
    insert(new com.ftn.sbnz.model.events.LineBreakEvent(0));
    $t.print();
end

